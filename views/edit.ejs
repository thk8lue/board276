<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <%- include('menu.html') %>
        <div class = "container mt-4">
            <form action ="/edit", method="post">
                <div class="form-group">
                    <label>제목</label>
                    <input type="text" value = "<%= data._id %>" name = "id" style = "display:none;">
                    <input type="text" name="title" class='form-control'
                    value="<%= data.title %>">
                </div>
                <p></p>
                <div>
                    <label>내용</label>
                    <textarea name="content" rows = "10" class='form-control'
                    >"<%= data.content %>"</textarea>
                </div>
                <p></p>
                <div class="form-group">
                    <label>작성일</label>
                    <input type="date" class="form-control" name="someDate"
                    value="<%= data.date %>">
                </div>
                <p></p>
                <Button type="submit" class="btn btn-warning" style="float:right">수정</Button>
            </form>
        </div>
    </body>
</html>